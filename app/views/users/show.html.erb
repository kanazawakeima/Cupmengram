<h1>プロフィール</h1>
<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-two-fifths">
        <figure class="image is-128x128"  style="margin-left: auto; margin-right: auto;">
          <% if @user.profile_image? %>
            <%= image_tag @user.profile_image.url, class: "profile_image is-rounded" %>
          <% else %>
            <%= image_tag ("images-1.jpg"), class: "profile_image is-rounded" %>
          <% end %>
        </figure>
      </div>
      <div class="column is-6">
        <table>
          <tr>
            <td>
              <strong class="is-size-4"><%= @user.username %></strong>
              <br>
              <% if @user.id == current_user.id %>
                <%= @user.email %>
              <% end %>
            </td>
            <td>
              <% if @user.id == current_user.id %>
                <%= link_to "プロフィールを編集", edit_user_path(@user), class: "button is-small" %>
              <% end %>
            </td>
          </tr>
        </table>
        <table class="table is-fullwidth">
          <tr>
            <td>
              <%= @user.profile %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</section>
