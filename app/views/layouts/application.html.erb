<!DOCTYPE html>
<html>
  <head>
    <title>CupmenClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/5a6e161ade.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<header class="header">
</header>

  <body>
    <% if flash[:notice] %>
      <div class="notification is-info">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="notification is-danger">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>

    <nav class="navbar is-warning" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <p class="navbar-item">
          <%= link_to root_path do %>
           <strong class="is-size-3" style="font-family: cursive; color: #fff; text-shadow:1px 1px 0 #f00,-1px 1px 0 #f00,1px -1px 0 #f00,-1px -1px 0 #f00;">Cupmen log</strong>
          <% end %>
        </p>
        <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>
      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
          <div class="navbar-item">
          <%= link_to foods_path, class: "button is-danger is-outlined" do %>
            ラーメン一覧
          <% end %>
          </div>
        </div>
        <div class="navbar-end">
          <div class="navbar-item">
            <% if user_signed_in? %>
              <p class="navbar-item">ようこそ <%= current_user.username %> さん</p>
            <% end %>
            <div class="buttons">
              <% if user_signed_in? %>
                <%= link_to user_path(current_user.id), class: "button" do %>
                  マイページ
                <% end %>
                <%= link_to destroy_user_session_path, method: :delete, class: "button" do %>
                  ログアウト
                <% end %>
              <% else %>
                <%= link_to new_user_session_path, class: "button" do %>
                  ログイン
                <% end %>
                <%= link_to new_user_registration_path, class: "button" do %>
                  新規登録
                <% end %>
                <%= link_to users_guest_sign_in_path, method: :post, class: "button" do %>
                  ゲストログイン
                <% end %>
                <%= link_to users_admin_guest_sign_in_path, method: :post, class: "button" do %>
                  管理者ゲストログイン
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <% if user_signed_in? && current_user.admin? %>
      <section class="hero is-small is-link">
        <div class="hero-body">
          <div class="container">
            <h1 class="title">
              管理者モード
            </h1>
          </div>
        </div>
      </section>
    <% end %>
    <%= yield %>
  </body>
  <footer class="footer has-background-warning">
    <div class="content has-text-centered">
      <nav class="level">
        <div class="level-item has-text-centered">
          <a href="#">
            プライバシー
          </a>
        </div>
        <div class="level-item has-text-centered">
          <a href="#">
            利用規約
          </a>
        </div>
        <div class="level-item has-text-centered">
          <a href="#">
            免責事項
          </a>
        </div>
        <div class="level-item has-text-centered">
          <a href="#">
            採用情報
          </a>
        </div>
        <div class="level-item has-text-centered">
          <a href="#">
            お問い合わせ・ヘルプ
          </a>
        </div>
        <div class="level-item has-text-centered">
          <a href="#">
            ご意見・ご要望
          </a>
        </div>
      </nav>
      <div>
        © JOHOBASE
      </div>
    </div>
  </footer>
</html>
