<h1>検索結果</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Content</th>
      <th>Company</th>
      <th>Price</th>
      <th>Taste</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td class="food_image"><%= image_tag food.image.url %></td>
        <td><%= food.content %></td>
        <td><%= food.company %></td>
        <td><%= food.price %></td>
        <td><%= food.taste %></td>
        <td><%= food.genre %></td>
        <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Top', foods_path %>
